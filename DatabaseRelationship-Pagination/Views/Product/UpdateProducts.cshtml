@model ProductGetDTOs;

<div class="container" style="max-width:785px;">

    <div class="row">
        <div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header border-bottom-0">
                    <h4 class="card-title">Update Category</h4>
                </div>
                <div class="card-body">
                    <form id="formIdCategory" class="form-horizontal" asp-action="UpdateProducts" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="@Model.ProductId" />
                        <div class="form-group row">
                            <label for="inputName" class="col-md-3 form-label">Product Name</label>
                            <div class="col-md-9">
                                <input type="text" asp-for="@Model.ProductName" class="form-control" id="inputName" placeholder="Name" required>
                                <span asp-validation-for="@Model.ProductName" class="text-danger"></span>

                                <input type="text" asp-for="@Model.Price" class="form-control" id="inputName" placeholder="Name" required>
                                <span asp-validation-for="@Model.Price" class="text-danger"></span>

                                <input type="text" asp-for="@Model.CategoryName" class="form-control" id="inputName" placeholder="Name" required>
                                <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>

                            </div>



                        </div>


                        <div class="form-group mb-0 mt-4 row justify-content-end">
                            <div class="col-md-9">
                                <button id="edit-button" class="btn btn-primary" type="button">Update</button>
                                <a class="btn btn-secondary btn-cancel" data-toggle="modal" data-target=".department-modal">Cancel</a>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
