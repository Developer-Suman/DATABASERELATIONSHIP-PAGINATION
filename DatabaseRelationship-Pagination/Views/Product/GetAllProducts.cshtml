@using BLL.DTOs;
@using BLL.DTOs.Products;
@model ProductIndexDTOs


<h12>Successfully Added Product</h12>
<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 12px;
        border: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }



    .numeric {
        text-align: center;
    }

    .center {
        text-align: center;
    }

</style>
<table>
    <thead>
        <tr>
            <th>ProductId</th>
            <th class="numeric">ProductName</th>
            <th class="numeric">Price</th>

            <th class="numeric">Action</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.productGetDTOs.Count(); i++)
        {
            <tr>
                <td>@Model.productGetDTOs[i].ProductId</td>
                <td class="numeric">@Model.productGetDTOs[i].ProductName</td>
                <td class="numeric">@Model.productGetDTOs[i].Price</td>


                <td class="numeric currency">
                    <a asp-action="Update" asp-controller="Product" asp-route-id="@Model.productGetDTOs[i].ProductId"> <i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Delete" asp-controller="Product" asp-route-id="@Model.productGetDTOs[i].ProductId"> <i class="fa-sharp fa-solid fa-trash"></i></a>
                </td>

            </tr>

        }


    </tbody>

</table>
